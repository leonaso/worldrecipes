<div class="message">
  <p>
    <%= gravatar_for(message.chef, size: 40)%>
    <strong><%= message.chef.chef_name.capitalize %></strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
  <p>
    <small><em>Comment created <%= time_ago_in_words(message.created_at) %> ago</em></small>
  </p>
</div>