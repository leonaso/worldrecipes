<div class="message">
  <p>
    <small><em>Created <%= time_ago_in_words(message.created_at) %></em></small>
  </p>
  <p>
    <%= gravatar_for(message.chef, size: 40)%>
    <strong><%= message.chef.chef_name.capitalize %></strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
</div>