<% obj.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef_info center">
        <%= gravatar_for(recipe.chef, size: 80)%>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to recipe.recipe_name, recipe_path(recipe) %></h4>
      <p><%= truncate(simple_format(recipe.description), length: 150) %></p>
      <p>
        <spam class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at)%> ago</small></spam>
      </p>
      <% if logged_in? && (current_chef == recipe.chef || current_chef.admin?) %>
        <div class="recipe-actions">
          <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-xs btn-warning" %>
          <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete,
                                      daata: { confirm: "Are you sure you want to delete this recipe"},
                                     class: "btn btn-xs btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
  
<% end %>