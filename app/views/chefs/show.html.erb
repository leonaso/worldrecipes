<%= render 'shared/page_title', title: "Chef #{@chef.chef_name}'s profile" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 80 %>
  </div>
</div>
<% if @chef.recipes.count != 0 %>
  <h4 align="center"><%= @chef.chef_name %>'s recipes</h4>
  <div class="center">
    <%= will_paginate @chef_recipes %>
  </div>
  <%= render 'recipes/recipe', obj: @chef_recipes %>
  <div class="center">
    <%= will_paginate @chef_recipes %>
  </div>
<% else %>
  <h4 align="center"> No recipes yet! </h4>
<% end %>
