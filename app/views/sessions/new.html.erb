<%= render 'shared/page_title', title: "Log in" %>

<%#= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :email, "Email:" %>
    </div>
    <div class="col-md-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :password, "Password:" %>
    </div>
    <div class="col-md-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%#= f.submit(@chef.new_record? ? "Create account" : "Update account",
                                    class: "btn btn-primary btn-lg btn-xlarge") %>
      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-xlarge" %>
      <%= link_to "[ Don't have an account? Sign up now ]", signup_path, class: 'matchcolor' %>
      <%= link_to "[ Cancel request ]", recipes_path, class: 'matchcolor' %>
    </div>
  </div>
<% end %>